

<section class="page-width product-section">
  <div class="grid grid--2-col">
    <!-- Product Image -->
    <div class="product__media">
      {{ product.featured_image | image_url: width: 600 | image_tag: class: 'product__media-image' }}
    </div>

    <!-- Product Details -->
    <div class="product__info-wrapper">
      <h1 class="product__title">{{ product.title }}</h1>
      <div class="product__description rte">{{ product.description }}</div>

      <!-- Width Input -->
      <div class="product-form__input">
        <label class="form__label" for="width">Select Width (cm)</label>
        <input id="width" type="number" min="1" placeholder="Enter width in cm" class="field__input" />
      </div>

      <!-- Drop Variant Selector -->
      <div class="product-form__input">
        <label class="form__label" for="drop">Select Drop</label>
        <select id="drop" class="field__input">
          {% for option in product.options_with_values %}
            {% if option.name == "Drop" %}
              {% for value in option.values %}
                <option value="{{ value }}">{{ value }} cm</option>
              {% endfor %}
            {% endif %}
          {% endfor %}
        </select>
      </div>

      <!-- Dynamic Price -->
      <p id="price-box" class="product__price">Enter width and select drop to see price.</p>

      <!-- Add to Cart Button -->
      <button id="add-to-cart" class="button button--primary">Add to Cart</button>

      <!-- Hidden product meta metafield JSON -->
      <script>
        window.curtainData = {
          widthRanges: {{ product.metafields.custom.custom_width_ranges.value | json }},
          pricingTable: {{ product.metafields.custom.custom_pricing_table.value | json }}
        };
      </script>
    </div>
  </div>
</section>

<style>
  /* Ensure image + content are side by side */
  .product-section > .grid {
    display: flex;
    flex-direction: row; 
    align-items: flex-start;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: nowrap; 
  }

 
  .product__media,
  .product__info-wrapper {
    flex: 0 0 50%;
    max-width: 50%;
    box-sizing: border-box;
  }

  
  .product__media {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product__media-image {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
    display: block;
  }

  
  .product__info-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 1rem;
    padding: 1rem 2rem;
  }

  .product__title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .product__description {
    font-size: 1rem;
    line-height: 1.5;
    color: #444;
  }

  .form__label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .field__input {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
  }

  .product__price {
    margin: 1rem 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .button {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s ease-in-out;
  }

  .button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  
  @media (max-width: 768px) {
    .product-section > .grid {
      flex-direction: column;
      gap: 1.5rem;
    }

    .product__media,
    .product__info-wrapper {
      flex: 0 0 100%;
      max-width: 100%;
      padding: 0;
    }
  }
</style>


<script>
document.addEventListener("DOMContentLoaded", function() {
  const widthInput = document.querySelector('#width');
  const dropSelect = document.querySelector('#drop');
  const priceBox = document.querySelector('#price-box');
  const addBtn = document.querySelector('#add-to-cart');
  const data = window.curtainData;

  function updatePrice() {
    const width = parseInt(widthInput.value);
    const drop = dropSelect.value;

    if (!width || !drop) return;

    const range = data.widthRanges.find(r => width >= r.min && width <= r.max);
    if (!range) {
      priceBox.textContent = "âŒ Width out of supported ranges.";
      addBtn.textContent = "Add to Cart";
      return;
    }

    const panels = range.panels;
    const priceList = data.pricingTable[`drop_${drop}`];
    if (!priceList) {
      priceBox.textContent = "No price data found for this drop.";
      return;
    }

    const finalPrice = priceList[panels - 1];
    priceBox.textContent = `ðŸ’° Total Price: $${finalPrice}`;
    addBtn.textContent = `Add to Cart â€” $${finalPrice}`;
  }

  widthInput.addEventListener('input', updatePrice);
  dropSelect.addEventListener('change', updatePrice);
});
</script>
